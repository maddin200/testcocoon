# this one is important
SET(CMAKE_SYSTEM_NAME Linux)


IF ( "$ENV{COVERAGESCANNER_PATH}" MATCHES "." )
SET(COVERAGESCANNER_LOC "$ENV{COVERAGESCANNER_PATH}" CACHE FILEPATH "CoverageScannner Path" FORCE)
ENDIF()
# specify the cross compiler
SET(CMAKE_C_COMPILER ${COVERAGESCANNER_LOC}/csgcc CACHE FILEPATH "CoverageScanner wrapper" FORCE)
SET(CMAKE_CXX_COMPILER "${COVERAGESCANNER_LOC}/csgxx" CACHE FILEPATH "CoverageScanner wrapper" FORCE)
SET(CMAKE_LINKER "${COVERAGESCANNER_LOC}/csgxx" CACHE FILEPATH "CoverageScanner wrapper" FORCE)
SET(CMAKE_AR ${COVERAGESCANNER_LOC}/csar CACHE FILEPATH "CoverageScanner wrapper" FORCE)
SET(CMAKE_RANLIB ${COVERAGESCANNER_LOC}/ranlib.sh CACHE FILEPATH "CoverageScanner wrapper" FORCE)
